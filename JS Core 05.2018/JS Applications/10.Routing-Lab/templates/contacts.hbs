<section id="contacts">
    <div class="container">
        <div id="book" class="box-large">
            <div id="list">
                <h1>Contacts</h1>
                <div class="content">
                    {{#each contacts}}
                    <div class="contact" data-id="{{@index}}" onclick="sessionStorage.setItem('currentContact', $(this).attr('data-id')); location.reload();">
                        <span class="avatar small">&#9787;</span>
                        <span class="title">{{firstName}} {{lastName}}</span>
                    </div>
                    {{/each}}
                </div>
            </div>
            {{> details}}
        </div>
    </div>
</section>