{{> header}}
{{> menu}}
<section id="viewMe">
    <div class="content">
        <div class="chirper">

            <h2 class="titlebar">{{username}}</h2>

            {{> createForm}}

            <div id="myStats" class="user-details">
                <span>{{count}} chirps</span> | <span>{{following}} following</span> | <span>{{followers}} followers</span>
            </div>
        </div>
        <div id="myChirps" class="chirps">
            <h2 class="titlebar">Chirps</h2>
            {{#each chirps}}
                {{> chirp}}
            {{else}}
                <p>No chirps in database</p>
            {{/each}}
        </div>
    </div>
</section>
{{> footer}}